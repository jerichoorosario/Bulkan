<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/RippleStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleInAdapter="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

       <!-- <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_three"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:minHeight="30dp"
            android:padding="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nav_row_item_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:textColor="@color/divider"
                android:src="@mipmap/ic_launcher"/>

            <com.team.bulkan.font.HelveticaTextView
                style="@style/TextViewAppearance.Title1"
                android:padding="0dp"
                android:id="@+id/nav_row_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Album"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textAllCaps="true"
                 />



        </LinearLayout>
    </LinearLayout>

</LinearLayout>